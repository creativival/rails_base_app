<div class="container">
  <h2><%= t('.change_your_password') %></h2>

  <%= bootstrap_form_with(model: @user, url: password_path(resource_name), method: :put, local: true) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
                         label: "#{ t('.new_password') }#{ t('devise.shared.minimum_password_length', count: @minimum_password_length) }" %>

    <%= f.password_field :password_confirmation, autocomplete: "new-password",
                         label: t('.confirm_new_password') %>

    <%= f.submit t('.change_my_password') %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
